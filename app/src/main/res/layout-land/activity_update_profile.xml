<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom_update_profile_land"
            android:layout_marginTop="@dimen/text_view_margin_top_update_profile_land"
            android:gravity="center"
            android:text="@string/update_profile"
            android:textColor="@color/RED"
            android:textSize="@dimen/text_view_text_size_update_profile_land"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtFullname_Update"
            android:layout_width="@dimen/edit_text_width_update_profile_land"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="@dimen/edit_text_padding_drawable_update_profile_land"
            android:hint="@string/update_fullname"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/edit_text_text_size_update_profile_land" />

        <EditText
            android:id="@+id/edtPhone_Update"
            android:layout_width="@dimen/edit_text_width_update_profile_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top_update_profile_land"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="@dimen/edit_text_padding_drawable_update_profile_land"
            android:hint="@string/update_phone"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/edit_text_text_size_update_profile_land" />

        <EditText
            android:id="@+id/edtEmail_Update"
            android:layout_width="@dimen/edit_text_width_update_profile_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top_update_profile_land"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/edit_text_padding_drawable_update_profile_land"
            android:hint="@string/update_email"
            android:ems="10"
            android:inputType="phone"
            android:textSize="@dimen/edit_text_text_size_update_profile_land" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="@dimen/button_width_update_profile_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top_update_profile_land"
            android:background="@drawable/button_play_shape"
            android:text="@string/apply_change"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/button_text_size_update_profile_land"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
