<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_app"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.its.its.view.LoginActivity">

    <EditText
        android:id="@+id/editUserName_Login"
        android:layout_width="@dimen/edit_text_username_width_login_portrait"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/button_play_text_welcome_screen"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="@dimen/drawable_padding_left_login_portrait"
        android:ems="10"
        android:hint="@string/edit_text_username_login"
        android:inputType="textPersonName"
        android:textSize="@dimen/edit_text_username_text_size_login_portrait" />

    <EditText
        android:id="@+id/editPassword_Login"
        android:layout_width="@dimen/edit_text_password_width_login_portrait"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/edit_text_password_margin_top_login_portrait"
        android:background="@color/button_play_text_welcome_screen"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="@dimen/drawable_padding_left_login_portrait"
        android:ems="10"
        android:hint="@string/edit_text_password_login"
        android:inputType="textPassword"
        android:textSize="@dimen/edit_text_password_text_size_login_portrait" />

    <TextView
        android:id="@+id/tvForgotPass_Login"
        android:layout_width="@dimen/text_view_width_login_portrait"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_view_margin_top_login_portrait"
        android:text="@string/text_view_forgot_password_login"
        android:textColor="@color/button_play_text_welcome_screen"
        android:textSize="@dimen/text_view_text_size_forgot_password_login_portrait" />

    <Button
        android:id="@+id/btnPlay_Login"
        android:layout_width="@dimen/button_width_login_portrait"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/button_margin_top_login_land"
        android:background="@color/button_play_background_welcome_screen"
        android:text="@string/button_play_now_login"
        android:textAllCaps="false"
        android:textColor="@color/button_play_text_welcome_screen"
        android:textSize="@dimen/button_text_size_login_land" />

</LinearLayout>
