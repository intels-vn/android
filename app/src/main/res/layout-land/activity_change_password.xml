<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom_change_password_land"
            android:layout_marginTop="@dimen/text_view_margin_top_change_password_land"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="@color/RED"
            android:textSize="@dimen/text_view_text_size_change_password_land"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/edit_text_width_change_password_land"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/edit_text_padding_drawable_change_password_land"
            android:ems="10"
            android:hint="@string/old_password"
            android:inputType="textPassword"
            android:textSize="@dimen/edit_text_text_size_change_password_land" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="@dimen/edit_text_width_change_password_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top_change_password_land"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/edit_text_padding_drawable_change_password_land"
            android:ems="10"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:textSize="@dimen/edit_text_text_size_change_password_land" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="@dimen/edit_text_width_change_password_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top_change_password_land"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/edit_text_padding_drawable_change_password_land"
            android:ems="10"
            android:hint="@string/retype_new_password"
            android:inputType="textPassword"
            android:textSize="@dimen/edit_text_text_size_change_password_land" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/button_width_change_password_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top_change_password_land"
            android:background="@drawable/button_play_shape"
            android:text="@string/apply_change"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/button_text_size_change_password_land"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
