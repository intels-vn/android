<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom_verify_withdraw_land"
            android:layout_marginTop="@dimen/text_view_margin_top_verify_withdraw_land"
            android:gravity="center"
            android:text="@string/verify_withdraw"
            android:textColor="@color/RED"
            android:textSize="@dimen/text_view_text_size_verify_withdraw_land"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/edit_text_width_verify_withdraw_land"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/edit_text_padding_drawable_verify_withdraw_land"
            android:ems="10"
            android:hint="@string/edit_text_password_register"
            android:inputType="textPassword"
            android:textSize="@dimen/edit_text_text_size_verify_withdraw_land" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="@dimen/edit_text_width_verify_withdraw_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top_verify_withdraw_land"
            android:background="@color/WHITE"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="@dimen/edit_text_padding_drawable_verify_withdraw_land"
            android:ems="10"
            android:hint="@string/edit_text_phone_receive_exchange"
            android:inputType="phone"
            android:textSize="@dimen/edit_text_text_size_verify_withdraw_land" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/button_width_verify_withdraw_land"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top_verify_withdraw_land"
            android:background="@drawable/button_join_shape"
            android:text="@string/verify"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/button_text_size_verify_withdraw_land"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
