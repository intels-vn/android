<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="@dimen/edit_text_width_username_land"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_text_username_login"
        android:inputType="text" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/edit_text_width_password_land"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_text_password_margin_top"
        android:ems="10"
        android:hint="@string/edit_text_password_login"
        android:inputType="textPassword" />
</LinearLayout>